/**index.wxss**/
.home {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.recommend {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recommend .pic {
  width: 100%;
  height: 100%;
}
.recommend .pic image {
  width: 100%;
}
.recommend .txt {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, .8), transparent);
  color: #fff;
  font-weight: 700;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.searchbox {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 60rpx;
}
.searcharea {
  position: relative;
}
.clearicon {
  position: absolute;
  right: 20rpx;
  top: 26rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}
.searchbox input {
  border: 1px solid #ddd;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
}

.hot {
  margin-top: 60rpx;
  padding: 0 30rpx;
}
.hot .catebox {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.hot .cate {
  background-color: #fff;
  overflow: hidden;
  margin-left: 4%;
  margin-bottom: 30rpx;
  width: 48%;
  height: 420rpx;
  border-radius: 10rpx;
}
.hot .cate:nth-child(2n + 1) {
  margin-left: 0;
}
.hot .cate .pic {
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}
.hot .cate .pic image {
  width: 100%;
}
.hot .cate .txt {
  text-align: center;
}