}
.layout {
  background-color: #fff;
  padding: 30rpx;
}
.des .name {
  font-size: 32rpx;
  font-weight: 700;
}
.cookingtime, .preparetime, .peoplenum {
  margin-top: 24rpx;
  font-size: 28rpx;
}
.layout .h2 {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-weight: 700;
