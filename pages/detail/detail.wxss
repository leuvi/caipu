}
.content {
  margin-top: 20rpx;
}
.content .p {
  font-size: 28rpx;
  line-height: 52rpx;
}
.material {
  margin-top: 20rpx;
  font-size: 28rpx;
}
.mrow {
  border-bottom: 1px solid #ededed;
